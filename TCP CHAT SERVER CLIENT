import java.io.*;
import java.net.*;
import java.util.*;
import java.util.concurrent.*;

public class ChatApp {
    public static void main(String[] args) throws Exception {
        if (args.length < 1) {
            System.out.println("Usage:");
            System.out.println("  Server: java ChatApp server <port>");
            System.out.println("  Client: java ChatApp client <host> <port> <username>");
            return;
        }
        String mode = args[0];
        if ("server".equalsIgnoreCase(mode)) {
            int port = Integer.parseInt(args[1]);
            new ChatServer(port).start();
        } else if ("client".equalsIgnoreCase(mode)) {
            String host = args[1];
            int port = Integer.parseInt(args[2]);
            String username = args[3];
            new ChatClient(host, port, username).start();
        } else {
            System.out.println("Unknown mode: " + mode);
        }
    }
}

class ChatServer {
    private final int port;
    private final ExecutorService pool = Executors.newCachedThreadPool();
    private final Set<ClientHandler> clients = ConcurrentHashMap.newKeySet();

    ChatServer(int port) { this.port = port; }

    public void start() throws IOException {
        try (ServerSocket serverSocket = new ServerSocket(port)) {
            System.out.println("Chat server listening on port " + port);
            while (true) {
                Socket socket = serverSocket.accept();
                ClientHandler handler = new ClientHandler(socket, this);
                clients.add(handler);
                pool.submit(handler);
            }
        }
    }

    void broadcast(String message, ClientHandler from) {
        for (ClientHandler c : clients) {
            if (c != from) c.send(message);
        }
    }

    void remove(ClientHandler handler) {
        clients.remove(handler);
    }
}

class ClientHandler implements Runnable {
    private final Socket socket;
    private final ChatServer server;
    private volatile PrintWriter out;
    private volatile String username = "Anonymous";

    ClientHandler(Socket socket, ChatServer server) {
        this.socket = socket;
        this.server = server;
    }

    public void run() {
        try (BufferedReader in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
             PrintWriter pw = new PrintWriter(socket.getOutputStream(), true)) {
            this.out = pw;
            out.println("Welcome! Enter your username:");
            String name = in.readLine();
            if (name != null && !name.isBlank()) username = name.trim();
            out.println("Hello " + username + "! Type messages, or /quit to exit.");
            server.broadcast("[JOIN] " + username, this);
            String line;
            while ((line = in.readLine()) != null) {
                if (line.equalsIgnoreCase("/quit")) break;
                if (line.startsWith("/pm ")) {
                    int idx = line.indexOf(' ', 4);
                    if (idx > 4) {
                        String toUser = line.substring(4, idx);
                        String msg = line.substring(idx + 1);
                        // Simple PM: send only to matching username
                        // (Inefficient broadcast-check; fine for demo)
                        // You could map usernames to handlers for efficiency.
                        server.broadcast("[PM to " + toUser + "] " + username + ": " + msg, this);
                        out.println("[PM sent to " + toUser + "] " + msg);
                    } else {
                        out.println("Usage: /pm <user> <message>");
                    }
                } else {
                    String formatted = username + ": " + line;
                    System.out.println(formatted);
                    server.broadcast(formatted, this);
                }
            }
        } catch (IOException e) {
            System.err.println("Client error: " + e.getMessage());
        } finally {
            server.broadcast("[LEAVE] " + username, this);
            server.remove(this);
            try { socket.close(); } catch (IOException ignored) {}
        }
    }

    void send(String msg) {
        if (out != null) out.println(msg);
    }
}

class ChatClient {
    private final String host;
    private final int port;
    private final String username;

    ChatClient(String host, int port, String username) {
        this.host = host; this.port = port; this.username = username;
    }

    public void start() throws IOException {
        try (Socket socket = new Socket(host, port);
             BufferedReader in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
             PrintWriter out = new PrintWriter(socket.getOutputStream(), true);
             BufferedReader stdin = new BufferedReader(new InputStreamReader(System.in))) {
            System.out.println(in.readLine()); // server asks for username
            out.println(username);
            System.out.println(in.readLine()); // greeting
            Thread reader = new Thread(() -> {
                try {
                    String s;
                    while ((s = in.readLine()) != null) System.out.println(s);
                } catch (IOException ignored) {}
            });
            reader.setDaemon(true);
            reader.start();
            String input;
            while ((input = stdin.readLine()) != null) {
                out.println(input);
                if ("/quit".equalsIgnoreCase(input)) break;
            }
        }
    }
}
